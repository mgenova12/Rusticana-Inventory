				<td><%= inventory.quantity %> </td>
				<td><%= inventory.quantity_needed %> </td>	     		
	     	<% end %>
	     </tr>
	     <% end %>	     


	  </table>
	</div>

      <div class="form-group">
        <label>Notes:</label>
        <%= @message %>
      </div>

