
<h1>All Non-prepped Products</h1>

<a href="/products/new"><button type="button" class="btn btn-success">Add New Product</button></a>

<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement</th>
        <th>Item Type</th>
        <th>Case Quantity </th>
        <th>Price</th>
       	<th>Markup</th>
        <th>Markup Price </th>
        <th>Prepped </th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

	<% @products.each do |product| %>
	  <tr>
		    <td><%= product.name %></td>
      	<td><%= product.measurement %></td> 
      	<td><%= product.item_type %> </td>
      	<td><%= product.case_quantity %> </td>	
      	<td><%= number_to_currency(product.price) %> </td>
        <td><%= number_to_percentage(product.markup, precision: 1) %> </td>
        <td><%= number_to_currency( (product.price) * ((product.markup * 0.01)+1)) %> </td>

        <td><%= link_to 'Add', "/products/prepcenter/#{product.id}/new", class: "btn btn-success"%></td>

	      <td><%= link_to 'Edit', "/products/#{product.id}/edit", class: "btn btn-primary"%></td>
        <td><%= button_to "Delete", { action: "destroy", id: product.id }, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %> </td>
	 </tr>
	<% end %>

    </tbody>
  </table>

  </div>