
<h1>Edit <%= @store_good.product.name %> From <%= store_name_format(params[:store]) %></h1>


	<%= form_tag "/#{params[:store]}/products/#{params[:id]}", method: :patch do %>
	<form>
	  <div class="form-group">
	    <label>Max Amount</label>
	    <input type="number" class="form-control" name="max_amount" value="<%= @store_good.max_amount %>"  required>
	  </div>  

	  <div class="form-group">
	    <label>Location</label>
	    <select class="form-control" name="location_id" required>
	    	<%= locations_options(@store_good) %>
	    </select>	 
	  </div>

	  <div class="form-group">
	    <label>Distributor</label>
	    <select class="form-control" name="distributor_id" required>
	    	<%= distributors_options(@store_good) %>
	    </select>	 
	  </div>

  	  <div class="form-group">
	    <label>Measurement</label>
	   <select class="form-control" name="measurement" required>
	   		<%= measurement_options(@store_good) %>
	    </select>	
	  </div>

		<div class="form-check">
		  <label class="form-check-label">
		  	<span> Replenish By Each &nbsp</span>
		  </label>
		  <%= check_box_tag 'replenish_by_each', "true" , @store_good.replenish_by_each %>
		</div>	  

	  	<label>Delivery day</label>
		  <div class='form-group'>
		    <label class="checkbox-inline">
			<%= delivery_day_options(@store_good, "Monday") %>
		      Monday
		    </label>
		    <label class="checkbox-inline">
			<%= delivery_day_options(@store_good, "Thursday") %>
		      Thursday
		    </label>	
		    <label class="checkbox-inline">
			<%= delivery_day_options(@store_good, "Both") %>
		      Both Days
		    </label>
		  </div>	 		


	  <button type="submit" class="btn btn-primary">Edit Product</button>
	</form>
	<% end %>
	<br>