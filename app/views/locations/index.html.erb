<h1>All Locations </h1>

<a href="/locations/new"><button type="button" class="btn btn-success">Add New Location</button></a>

<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

	<% @locations.each do |location| %>
	  <tr>
		   <td><%= location.name %></td>
	     <td><%= link_to 'Edit', "/locations/#{location.id}/edit", class: "btn btn-primary"%></td>
	     <td><%= button_to "Delete", { action: "destroy", id: location.id }, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %> </td>
	 </tr>
	<% end %>

    </tbody>
  </table>