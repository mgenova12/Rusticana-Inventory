<h1>Edit <%= @location.name %> </h1>


	<%= form_tag "/#{params[:store]}/locations/#{@location.id}", method: :patch do %>
		<form>
		  <div class="form-group">
		    <label>Location Name</label>
		    <input type="text" class="form-control" name="name" value="<%= @location.name %>" required>
		  </div>

		  <div class="form-group">
		    <label>Row Number</label>
		    <input type="number" class="form-control" name="row_num" value="<%= @location.row_num %>" required>
		  </div>		
			
		<button type="submit" class="btn btn-primary">Edit Location</button>
		</form>

	<% end %>