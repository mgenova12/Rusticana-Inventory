<h1> Prices Overview </h1>

<a href="/prices/new"><button type="button" class="btn btn-primary">Update Prices</button></a>
<a href="/prices/date"><button type="button" class="btn btn-primary">View Prices By Date</button></a>



<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <% @saved_price_dates.each do |saved_price_date| %>
          <th><%= saved_price_date.created_at.strftime('%A, %d %b %Y %l:%M %p') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>

  <% @products.each do |product| %>
    <tr>
      <td> <%= product.name %> </td>

      <% product.prices.order(:created_at).reverse.each do |price| %>

        <!-- Find previous value -->
        <td> <%= price.amount %></td>

      <% end %>

    </tr>

  <% end %>

    </tbody>
  </table>



