<h1> Prices Overview </h1>

<a href="/prices/new"><button type="button" class="btn btn-primary">Update Prices</button></a>
<a href="/prices/date"><button type="button" class="btn btn-primary">View Prices By Date</button></a>



<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <% @saved_price_dates.last(7).each do |saved_price_date| %>
          <th><%= saved_price_date.created_at.strftime('%m/%d/%Y') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %> </td>
      <% previous_price = product.prices.first.amount %>
      <% product.prices.order(:created_at).last(7).each do |price| %>

        <% if previous_price > price.amount %>
          <td> <%= number_to_currency(price.amount) %><span class="glyphicon glyphicon-arrow-down red"></span> </td>
        <% elsif previous_price < price.amount %>
          <td><%= number_to_currency(price.amount) %><span class="glyphicon glyphicon-arrow-up green"></span> </td>
        <% else %>
          <td><%= number_to_currency(price.amount) %></td>
        <% end %>
        <% previous_price = price.amount %>
      <% end %>

    </tr>

  <% end %>

    </tbody>
  </table>



