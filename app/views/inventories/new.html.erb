
<h1><%= store_name_format(params[:store]) %> Inventory</h1>

  <div class="form-group">
   <label>Select Order Day</label>
   <select class="form-control" name="order_day" required>
      <option value=""></option>
      <option value="Monday">Monday</option>
      <option value="Thursday">Thursday</option>
    </select> 
  </div>


<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>
        <th>Count By</th>
        <th>Inventory</th>
      </tr>     
    </thead> 




	<% @locations.each do |location|  %>
     <thead>
        <tr> 
          <td align="center" colspan="3"><%= location.name %></td>
        </tr>
     </thead>
		<% @all_store_goods.each do |store_good| %>
			<% if store_good.location_id == location.id %>
				<tr>
					<% if store_good.try(:product) %>
						<td><%= store_good.product.name %></td>
						<td><%= store_good.product.measurement %> </td>
					<% else %>	
						<td><%= store_good.prepcenter_product.name %></td>
						<td><%= store_good.prepcenter_product.measurement %></td>
					<% end %>
				</tr>
			<% end %>
		<% end %>

	<% end %>
  </table>
</div>