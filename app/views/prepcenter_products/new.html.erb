
<h1>Add <%= @product.name %> To Prep Center</h1>

	<%= form_tag "/products/prepcenter", method: :post do %>
		<form>
		
		  <input type="hidden" name="id" value="<%= params[:id] %>" >

		  <div class="form-group">
		    <label>Product Name</label>
		    <input type="text" class="form-control" name="name" placeholder="Enter Product Name" required>
		  </div>

		  <div class="form-group">
		    <label>Measurement</label>
		   <select class="form-control" name="measurement" required>
		      <option value=""></option>
		      <option value="EA">EA</option>
		      <option value="BIN">BIN</option>
		      <option value="SLEEVE">SLEEVE</option>
		      <option value="%">%</option>
		    </select>	
		  </div>

		  <div class="form-group">
		    <label>Prepped</label>
		    <select class="form-control" name="prepped" required>
		      <option value=""></option>
		      <option value="true">Prepped</option>
		      <option value="false">Not Prepped</option>
		    </select>	  	
		  </div>

		  <div class="form-group">
		    <label>Item Type</label>
		    <select class="form-control" name="item_type" required>
		      <option value=""></option>
		      <option value="dry">Dry</option>
		      <option value="refrigerated">Refrigerated</option>
		      <option value="frozen">Frozen</option>
		    </select>	 
		  </div>	  

		  <div class="form-group">
		    <label>Portion Size</label>
		    <input type="number" class="form-control" name="portion_size" placeholder="1 If No portion">
		  </div>

		  <div class='form-group'>
		  	<label>Mark Up</label>
			<input type="number" class="form-control" maxlength="12" name="markup" step="any" required/>
		  </div>	  

		  <button type="submit" class="btn btn-success">Add Product</button>
		</form>
	<% end %>

	<br>



